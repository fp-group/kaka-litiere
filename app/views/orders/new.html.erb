<h1>Fill in your order information</h2>

<%= simple_form_for @order do |f| %>
  <%= f.error_notification %>
    <%= f.association :company, required: true, collection: @companies %>
    <%= f.input :shipping_address, required: true %>
    <%= f.input :observations %>

    <br>
    <%= f.simple_fields_for "order_details" do |order_detail| %>
    <div class="products-container">
      <% @products.each_with_index do |product, index| %>
        <div class="product">
          <div class="product-element">
            <div class="product-image">
              <%= image_tag "#{product.designation}.png" %>
            </div>
            <div class="product-specs">
              <h2><%= product.designation %></h2>
              <p class="price">Unit price: <b>$<%= product.unit_price %></b></p>
              <div class="qty-selector">
            <button class="button-left">-</button>
            <%= order_detail.input :quantity, as: :integer, label: false %>
            <button class="button-right">+</button>
          </div>
            </div>
          </div>
          <%= order_detail.input :product_id, as: :hidden, input_html: {value: product.id} %>
        </div>
      <% end %>
    <% end %>
  </div>
  <p class="total-price">Total Price: $<b>75</b></p>
  <div class="form-actions">
    <%= f.button :submit, "Confirm Order" %>
  </div>
<% end %>
