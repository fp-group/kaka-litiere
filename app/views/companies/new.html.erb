<h1>Company information</h1>

<%= simple_form_for @company do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :billing_address, required: true %>
    <%= f.label "Country" %>
    <%= country_select("company", "country") %>
    <%= f.input :phone_number, required: true %>
    <%= f.label "VAT number (leave blank if not applicable)" %>
    <%= f.input :vat_number, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Continue" %>
  </div>
<% end %>
